<div class="responsive-wrapper">
  <section class="feed-posts">Posts</section>
  <%if (locals.user) {%>
  <form action="/posts/create" class="new-post-form" method="post">
    <textarea
      name="content"
      cols="30"
      rows="3"
      placeholder="Type here..."
      required
    ></textarea>
    <input type="submit" value="Post" />
  </form>
  <%}%>
  <div class="post">
    <div class="post-content">
      <%for(let post of posts){%> <%if (locals.user && locals.user.id ==
      post.user.id) {%>
      <div class="delete-post">
        <a href="/posts/destroy/<%= post.id %>">X</a>
      </div>
      <%}%>
      <p><%=post.content%></p>
      <p><%=post.user.name%></p>

      <%if (locals.user) {%>
      <form action="/comments/post" method="post">
        <input
          type="text"
          name="content"
          placeholder="Comment goes here..."
          required
        />
        <input type="hidden" name="post" value="<%=post._id%>" />
        <input type="submit" value="Comment" />
      </form>
      <ul>
        <%for (let comment of post.comments) {%>
        <li>
          <p><%=comment.content%></p>
          <p><%=comment.user.name%></p>
          <%if(locals.user && locals.user.id == comment.user.id) {%>
          <div class="delete-comment">
            <a href="/comments/destroy/<%= comment.id %>"> X </a>
          </div>
          <%}%>
        </li>
        <%}%>
      </ul>
      <%}%> <%}%>
    </div>
  </div>
</div>
