<div class="responsive-wrapper">
  <section class="feed-posts">Posts</section>
  <%if (locals.user) {%>
  <form action="/posts/create" class="new-post-form" method="post">
    <textarea
      name="content"
      cols="30"
      rows="3"
      placeholder="Type here..."
      required
    ></textarea>
    <input type="submit" value="Post" />
  </form>
  <%}%>
  <div class="post">
    <div class="post-content">
      <%for(let post of posts){%> <%- include('_post', {post: post})-%> <%}%>
    </div>
    <div class="friend-content">
      <h3>Friends</h3>
      <%for(let friend of all_users){%> <%- include('_friend', {friend:
      friend})-%> <%}%>
    </div>
  </div>
</div>
