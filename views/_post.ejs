<article class="card">
  <div class="card-header">
    <a href="/users/profile/651196872fe0bedb175975c4">
      <span><img src="/images/avatar.png" /></span>
      <div class="card-metadata">
        <div class="card-user"><%=post.user.name%></div>
        <div class="card-time"><%=post.createdAt%></div>
      </div>
    </a>
  </div>
  <div class="card-body">
    <p><%=post.content%></p>
  </div>
  <div class="card-footer">
    <div class="footer-left-items">
      <a href="#" class="card-footer-item">
        <i class="ph-bold ph-heart"></i>
        Like
      </a>
      <a href="#" class="card-footer-item">
        <i class="ph-bold ph-chat-circle-text"></i>
        Comment
      </a>
    </div>
    <%if (locals.user && locals.user.id == post.user.id) {%>
    <div class="footer-right-items post-delete-btn">
      <a href="/posts/destroy/<%= post.id %>" class="card-footer-item">
        <i class="ph-bold ph-trash"></i>
        Delete
      </a>
    </div>
    <%}%>
  </div>
  <%if(locals.user) {%>
  <div class="comment-box">
    <form action="/comments/post" method="post">
      <input
        type="text"
        name="content"
        placeholder="Comment goes here..."
        required
      />
      <input type="hidden" name="post" value="<%=post._id%>" />
      <input type="submit" value="Comment" />
    </form>
  </div>
  <%}%>

  <div class="comments">
    <%for (let comment of post.comments) {%><%- include('_comment', {comment:
    comment}) -%> <%}%>
  </div>
</article>
